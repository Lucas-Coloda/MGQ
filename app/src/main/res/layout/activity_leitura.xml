<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LeituraActivity">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="620dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/makeChoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingVertical="250dp"
                android:text="@string/fa_a_sua_escolha"
                android:textAlignment="center"
                android:textSize="60sp" />

            <ImageView
                android:id="@+id/image1"
                android:layout_width="400dp"
                android:layout_height="660dp" />

            <ImageView
                android:id="@+id/image2"
                android:layout_width="400dp"
                android:layout_height="660dp" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEscolha1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="renderNextChoice"
            android:tag="1"
            android:text="@string/escolha_n_o_carregada"
            android:textColor="#03A9F4"
            android:textSize="15sp"
            app:backgroundTint="#00FFFFFF"
            app:cornerRadius="8dp"
            app:rippleColor="#33AAAAAA"
            app:strokeColor="#03A9F4"
            app:strokeWidth="2dp" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEscolha2"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="renderNextChoice"
            android:tag="2"
            android:text="@string/escolha_n_o_carregada"
            android:textColor="#FF9800"
            android:textSize="15sp"
            app:backgroundTint="#00FFFFFF"
            app:cornerRadius="8dp"
            app:rippleColor="#33AAAAAA"
            app:strokeColor="#FF9800"
            app:strokeWidth="2dp" />
    </LinearLayout>

</LinearLayout>
